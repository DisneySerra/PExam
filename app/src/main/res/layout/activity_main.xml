<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginEnd="31dp"
        android:text="Public Notes"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="Office Notes"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="116dp"
        android:text="Personal Notes"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <View
        android:id="@+id/divider3"
        android:layout_width="368dp"
        android:layout_height="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="179dp"
        android:background="@android:color/background_light" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="187dp"
        android:layout_height="177dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/divider3"
        android:layout_marginBottom="23dp"
        android:background="#ef7d7d"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="Note 1\nHello I am Disney Kyle Serra \nI am an IT Student\nI love to program and study about technology"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="186dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/divider3"
        android:layout_marginBottom="216dp"
        android:background="@android:color/holo_green_light"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="@string/Text1"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="157dp"
        android:layout_height="173dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView3"
        android:background="#d15050"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="10dp"
        android:paddingTop="120dp"
        android:text="@string/Text1"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/button2"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/button3"
        android:background="@drawable/tools" />

    <Button
        android:id="@+id/button3"
        android:layout_width="76dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/stationery" />

    <Button
        android:id="@+id/button4"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/barchart3" />

    <View
        android:id="@+id/divider"
        android:layout_width="157dp"
        android:layout_height="3dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="-87dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="#ffffff" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="121dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="106dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/aloneanimeart" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="146dp"
        android:layout_height="81dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView3"
        app:srcCompat="@drawable/beverage" />

</RelativeLayout>